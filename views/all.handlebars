<!-- This is the form for adding a new entry -->
<div class="add-entry-container">
  <form class="new-entry-form">
    <textarea id="entry_title" name="entry_title" placeholder="Post Title">
      {{ entry_title }}
    </textarea>
    <br />
    <textarea id="entry_text" name="entry_text" placeholder="post text">
      {{entry_text}}
    </textarea>
    <br />
    <button type="submit" value="Submit">
      Post
    </button>
  </form>
</div>

<div class="entries-container">
  {{#each entries as |entry|}}
  <div class="entry-card">
    <h3>
      {{entry.entry_title}}
    </h3>
    <p>
      {{entry.entry_text}}
    </p>
  </div>
  {{/each}}
</div>


<script src="/js/add-entry.js"></script>